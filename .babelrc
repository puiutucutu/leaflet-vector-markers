{
  "env": {
    "test": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": {
              "node": "current"
            }
          }
        ]
      ],
      "plugins": ["istanbul"]
    },
    "build": {
      "plugins": [
        ["@babel/plugin-proposal-class-properties", { "loose": true }]
      ],
      "presets": [
        [
          "@babel/preset-env",
          {
            "modules": false,
            "targets": {
              "browsers": ["ie >= 11"]
            },
            "useBuiltIns": "usage"
          }
        ]
      ]
    }
  }
}
